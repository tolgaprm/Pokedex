<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvStateItemTitle"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:textAlignment="viewEnd"
            android:textAllCaps="true"
            android:textAppearance="@style/TextAppearance.Poxedex.Subtitle3"
            tools:text="@string/hp"
            tools:textColor="@color/grass" />

        <View
            android:id="@+id/divider"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/three_level_margin"
            android:background="?android:attr/listDivider" />

        <TextView
            android:id="@+id/tvStateItemValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/three_level_margin"
            android:textAppearance="@style/TextAppearance.Poxedex.Body3"
            android:textColor="@color/dark_gray_scale"
            tools:text="049" />

        <androidx.core.widget.ContentLoadingProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="200"
            android:progress="0"
            app:trackCornerRadius="20dp"
            tools:progress="49"
            tools:progressTint="@color/grass" />
    </LinearLayout>
</layout>